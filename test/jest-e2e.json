{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./..",
  "testEnvironment": "node",
  "testTimeout": 30000,
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverage": false,
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/database/*/*.ts"
  ],
  "coverageReporters": ["text-summary", "lcov"]
}
